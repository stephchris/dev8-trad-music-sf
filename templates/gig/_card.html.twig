{# création de la gig_card avec les détails des pubs pour boucler dans pub_detail#}

<article class="card">
    <a href="{{ path('gig_detail', {'id': gig.id}) }}">
        <img src="{{  asset ('uploads/' ~ gig.pub.image) }}" alt="{{ gig.pub.image }}">
    </a>
    <h3>{{ gig.pub.name }}</h3>
    <time datetime="{{ gig.dateStart|date('Y-m-d h:i') }}">
        {{ gig.dateStart|date('l jS \\o\\f F \\a\\t g:i a') }}
    </time>

    <a href="/{{ path('gig_detail', {'id': 'gig.id'}) }}" class="btn btn-primary">See more</a>



</article>

